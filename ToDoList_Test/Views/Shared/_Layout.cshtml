<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToDoList_Test.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="bg-primary text-white text-center">
            <div class="row m-3 p-3">
                <div class="col-md-11">
                    <h1 class="">@ViewData["Title"]</h1>
                </div>
                @if (@Model is not LoginViewModel)
                {
                    <div class="col-md-1 text-end" style="align-content: center">
                        <a asp-action="Logout" class="btn btn-secondary">Выход</a>
                    </div>
                }
            </div>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
